        }
      ]
    }
  },
  "Patch /api/articles/:article_id": {
    "description": "update article's vote",
    "queries": ["inc_votes", "article_id"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
